#include<stdio.h>
void main()
{
    float amount,ds,ta;
    printf("bill amount\n");
    scanf("%f",&amount);
    if(amount<5000)
    ds=0;
    if(amount>=5000&amount<=10000)
    ds=0.1*amount;
    if(amount>=10000&&amount<=50000)
    ds=0.2*amount;
    if(amount>=50001&&amount<=10000)
    ds=0.3*amount;
    if(amount>10000)
    ds=0.4*amount;
    ta=amount-ds;
    printf("bill amount=%2f\ndiscount=%2f\ntotal amount=2%2f\n",amount,ds,ta);
    
}
